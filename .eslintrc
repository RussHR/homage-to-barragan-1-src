{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jquery": true,
        "mocha": true
    },
    "rules": {
        "quotes": 0,
        "max-len": [1, { "code": 120, "tabWidth": 4 }],
        "no-console": 1,
        "no-debugger": 1,
        "no-var": 1,
        "semi": [1, "always"],
        "no-trailing-spaces": 1,
        "object-curly-spacing": [1, "always"],
        "eol-last": 0,
        "no-unused-vars": [1, { "varsIgnorePattern": "tween" }],
        "no-underscore-dangle": 0,
        "no-alert": 0,
        "no-lone-blocks": 0,
        "import/no-named-as-default": 0,
        "indent": 1,
    },
    "globals": {}
}
